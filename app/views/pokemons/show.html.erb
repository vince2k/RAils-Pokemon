<div class="container">

  <%= link_to "Pokedex", root_path  %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card card-pokemon">
        <div>
          <%= cl_image_tag @pokemon.photo.key, class: "card-img-top img-fluid", alt: @pokemon.name %>
          <div class="card-body text-center">
            <h5><%= @pokemon.name %></h5>
            <p><strong>Type :</strong> <%= @pokemon.element_type %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <%= simple_form_for [@pokemon, @pokeball] do |f| %>
        <%= f.association :trainer, label: "Who is trying their luck?" %>
        <%= f.input :location, label: "Where are you?"%>
        <%= f.input :caught_on, label: "Date of Capture", as: :date, input_html: { class: 'datepicker' } %>
        <%= f.submit "Catch PokÃ©mon", class: "btn btn-primary" %>
      <% end %>
    </div>


  </div>
</div>
